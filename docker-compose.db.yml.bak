services:
  mysql:
    image: mysql:latest
    container_name: wp-mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: rootpass123
      MYSQL_DATABASE: wpdb
      MYSQL_USER: wpuser
      MYSQL_PASSWORD: wppass123
    volumes:
      - ./.docker_mysql_data:/var/lib/mysql
      - /etc/localtime:/etc/localtime:ro

volumes:
  .docker_mysql_data: